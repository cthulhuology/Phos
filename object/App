An.object().named('App').from(Device).
	has('widgets',[]).
	has('delay',40).
	does('run', function () { 
		Display.has('app',this)
		Screen.clear();
		this.dispatch('tick',{}).dispatch('draw',{});
		this.has('timer',setTimeout(function() { App.run() }, this.delay()));
	}).
	does('fps', function() { 
		return Math.floor(1000/this.delay()) 
	}).
	run()
